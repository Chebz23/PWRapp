<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_bg"
    tools:context=".createRoutines">

    <TextView
        android:id="@+id/header"
        android:layout_width="317dp"
        android:layout_height="86dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/convergence"
        android:text="@string/create_a_new_routine"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addExerciseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/convergence"
        android:text="@string/addExercise"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <EditText
        android:id="@+id/workoutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="16dp"
        android:ems="11"
        android:fontFamily="@font/convergence"
        android:hint="@string/workout_name"
        android:importantForAutofill="no"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="#505050"
        android:textSize="14sp"
        android:inputType="textCapSentences"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addExerciseBtn"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    


    <TableLayout
        android:id="@+id/exerciseTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addExerciseBtn">


        <TableRow
            android:id="@+id/row"
            android:layout_width="389dp"
            android:layout_height="match_parent"
            android:padding="4sp"
            android:textAlignment="center"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/exerciseTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:padding="2sp"
                android:text="@string/exerciseDtls"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/exerciseInput"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:hint="@string/name_of_exercise"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="2sp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#505050"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:padding="2sp"
                android:text="@string/sets"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numberSets"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:hint="@string/numberSets"
                android:importantForAutofill="no"
                android:inputType="number"
                android:padding="2sp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#505050"
                android:textSize="11sp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:padding="2sp"
                android:text="@string/reps"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numberReps"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:hint="@string/numberReps"
                android:importantForAutofill="no"
                android:inputType="number"
                android:padding="2sp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#505050"
                android:textSize="11sp" />


        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4sp"
            android:textAlignment="center"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/exerciseTxt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:padding="2sp"
                android:text="@string/exerciseDtls"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/exerciseInput2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:hint="@string/name_of_exercise"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="2sp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#505050"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/sets2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:padding="2sp"
                android:text="@string/sets"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numberSets2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:hint="@string/numberSets"
                android:importantForAutofill="no"
                android:inputType="number"
                android:padding="2sp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#505050"
                android:textSize="11sp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/reps2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:padding="2sp"
                android:text="@string/reps"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numberReps2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:hint="@string/numberReps"
                android:importantForAutofill="no"
                android:inputType="number"
                android:padding="2sp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#505050"
                android:textSize="11sp" />


        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4sp"
            android:textAlignment="center"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/exerciseTxt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:padding="2sp"
                android:text="@string/exerciseDtls"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/exerciseInput3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:hint="@string/name_of_exercise"
                android:importantForAutofill="no"
                android:inputType="text"
                android:padding="2sp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#505050"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/sets3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:padding="2sp"
                android:text="@string/sets"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numberSets3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:hint="@string/numberSets"
                android:importantForAutofill="no"
                android:inputType="number"
                android:padding="2sp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#505050"
                android:textSize="11sp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/reps3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:padding="2sp"
                android:text="@string/reps"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="11sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numberReps3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="2sp"
                android:fontFamily="@font/convergence"
                android:hint="@string/numberReps"
                android:importantForAutofill="no"
                android:inputType="number"
                android:padding="2sp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#505050"
                android:textSize="11sp" />


        </TableRow>


    </TableLayout>

    <Button
        android:id="@+id/acceptBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="@string/accept"
        android:fontFamily="@font/convergence"
        app:layout_constraintEnd_toStartOf="@+id/discardBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciseTable" />

    <Button
        android:id="@+id/discardBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="@string/discard"
        android:fontFamily="@font/convergence"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/acceptBtn"
        app:layout_constraintTop_toBottomOf="@+id/exerciseTable" />

</androidx.constraintlayout.widget.ConstraintLayout>